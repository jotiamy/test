package total;
import java.io.IOException;
import java.util.Scanner;


import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

import method_1.*;
import method_2.*;
import method_3.*;
import method_4.*;
public class Main extends JFrame{
    public  void main(String[] args) throws IOException {
        method_1.demo1 demo1=new method_1.demo1();
//        demo1.main(args);
        method_2.Main demo2 =new method_2.Main();
//        demo2.main(args);
       method_3.Main1 demo3 =new  method_3.Main1();
//        demo3.main(args);
        method_4.Main demo4 =new method_4.Main();
//        demo4.main(args);
        System.out.println("请输人选择的实现方式:1.主程序-子程序  2.面向对象  3.事件系统    4.管道-过滤");
        Scanner sc =new Scanner(System.in);
        int flag=sc.nextInt();
        if(flag==1) {
        	demo1.main(args);
        	this.setTitle("图片1");
    		this.setBounds(100, 100, 1000, 1000);
    		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
    		this.setVisible(true);
    		ImageIcon image1 = new ImageIcon("./photo/1.jpg");
    		JLabel label = new JLabel(image1);
    		this.add(label);

        }
        else if (flag==2) {
        	demo2.main(args);
        }
        else if(flag==3) {
        	demo3.main(args);
        }
        else if(flag == 4) {
        	demo4.main(args);
        }
        else {
        	System.out.print("输入有误");
        }
        }
}

